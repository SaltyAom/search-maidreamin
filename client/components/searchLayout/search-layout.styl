#landing
    display flex
    flex-direction column
    justify-content flex-start
    align-items center
    width 100%
    margin 0 auto
    padding calc(5vh + env(safe-area-inset-top)) 0 calc((25px + 5vh) + env(safe-area-inset-bottom)) 0

#search
    position sticky
    position -webkit-sticky
    z-index 1
    top 15px
    border 0
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    width calc(100% - (5% + env(safe-area-inset-right) + 5% + env(safe-area-inset-left)))
    font-size 28px
    margin 5vh calc(5% + env(safe-area-inset-right)) 40px calc(5% + env(safe-area-inset-left))
    padding 0 0 0 16px
    color var(--primary-text)
    background-color var(--root)
    border-radius 4px
    box-shadow  0 3px 7px rgba(0,0,0,.075),
                0 8px 25px rgba(0,0,0,.0325)
    overflow hidden
    outline none

#search-input
    appearance none
    -webkit-appearance none
    -moz-appearance none
    display flex
    width calc(100% - 64px)
    height 100%
    font-size 28px
    padding 16px 0
    border 0
    color var(--primary-text)
    background-color var(--root)
    outline none

    &:valid ~ #search-remove
        opacity .75

#search-icon
    width 32px
    height 32px
    margin 16px 8px 16px 0
    user-select none
    -webkit-user-select none

#search-remove
    width 32px
    height 32px
    margin 16px 12px 16px 0
    cursor pointer
    opacity .375
    transition opacity .15s ease-out

    &:hover,
    &:focus
        opacity 1

    &::selection,
    &::-webkit-selection
        background-color transparent

#search-tools
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start 
    width 100%

#search-sort
    color var(--secondary-text)

    &::before,
    &::after
        background-color var(--secondary-text)

#result
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start
    width 100%
    overflow-x hidden

#search-tools,
#result
    padding 0 calc(5% + env(safe-area-inset-right)) 0 calc(5% + env(safe-area-inset-left))

#result
    padding-bottom 25px

@media screen and (min-width 768px)
    #landing
        width 770px

    #search
        width calc(100% - (120px + env(safe-area-inset-right) + 120px + env(safe-area-inset-left)))
        margin 5vh calc(120px + env(safe-area-inset-right)) 40px calc(120px + env(safe-area-inset-left))

    #search-tools,
    #result
        padding 0 calc(120px + env(safe-area-inset-right)) 0 calc(120px + env(safe-area-inset-left))

@media screen and (min-width 968px)
    #result
        overflow-x unset