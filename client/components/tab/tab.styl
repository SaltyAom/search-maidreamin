#tab
    position fixed
    z-index 10
    top 0
    left 0
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100vh
    padding env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)
    background-color var(--background)

#tab-head
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    width 100%
    height 58px
    padding 0 16px
    color var(--primary-text)
    font-weight bold
    background-color var(--root)
    box-shadow 4px 0 8px alpha(#000, .25)

#tab-body
    flex 1
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    width 100%
    padding calc(56px + 16px) 24px 16px 24px

    & > .image
        flex 1
        width 80%
        max-width 40vh
        padding 24px

    & > .content
        display flex
        flex-direction column
        width 100%

        & > .title
            margin 0 0 16px 0
            font-size 24px
            color var(--primary-text)
            font-weight bold
            font-weight normal

        & > .detail
            margin 0
            font-size 18px
            color var(--secondary-text)
            font-weight normal
            line-height 1.35em

#tab-footer
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    width 100%
    padding 16px 24px 24px 24px

    & > .button
        appearance none
        -webkit-appearance none
        display flex
        flex-direction row
        justify-content center
        align-items center
        width 100%
        padding 14px
        font-size 16px
        color #fff
        font-weight bold
        border 0
        border-radius 4px
        background-color var(--primary)
        cursor pointer
        outline none

@media screen and (min-width 568px)
    #tab-body,
    #tab-footer
        width 410px

    #tab-body
        flex 0
        padding-top 2vh

        & > .image
            width 90%

@media screen and (max-width 567.9px) and (orientation landscape)
    #tab-body,
    #tab-footer
        width 100%

    #tab-body
        flex-direction row
        padding-top 24px

        & > .image
            width 40%

    #tab-footer
        & > .button
            width 260px

@media screen and (max-height 567.9px)
    #tab
        height 100vh

    #tab-body,
    #tab-footer
        width 100%

    #tab-body
        flex 1
        flex-direction row
        max-width 700px
        padding-top 24px

        & > .image
            max-width unset
            width 40%

    #tab-footer
        & > .button
            width 260px