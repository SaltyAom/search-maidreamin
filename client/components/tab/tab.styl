#tab
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    height 100vh
    padding env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)
    background-color var(--background)
    overflow-x hidden
    overflow-y auto

#tab-head
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    width 100%
    height 58px
    padding 0 16px
    color var(--primary-text)
    font-weight bold
    background-color var(--root)
    box-shadow 4px 0 8px alpha(#000, .25)

#tab-body
    flex 1
    display flex
    flex-direction row
    justify-content flex-start
    align-items flex-start
    width 100%
    padding 56px 0 0 0
    overflow-x hidden
    will-change scroll-position

    & > .page
        flex 1 0 auto
        display flex
        flex-direction column
        justify-content space-between
        align-items center
        width 100%
        height 100%
        padding 16px 24px

        & > .figure
            flex 3
            display flex
            flex-direction column
            justify-content center
            align-items center
            width 80%
            max-width 40vh
            padding 18px

            & > .image
                display block
                width 100%
                user-select none
                -webkit-user-select none
                -webkit-user-drag none

        & > .content
            flex 1
            display flex
            flex-direction column
            width 100%

            & > .title
                margin 0 0 16px 0
                font-size 24px
                color var(--primary-text)
                font-weight bold
                font-weight normal

            & > .detail
                margin 0
                font-size 18px
                color var(--secondary-text)
                font-weight normal
                line-height 1.35em

#tab-footer
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    width 100%
    padding 16px 24px 24px 24px

    & > .button
        appearance none
        -webkit-appearance none
        display flex
        flex-direction row
        justify-content center
        align-items center
        width 100%
        padding 14px
        font-size 16px
        color #fff
        font-weight bold
        border 0
        border-radius 4px
        background-color var(--primary)
        box-shadow 0 3px 9px alpha(#000, .2)
        transition box-shadow .2s ease-out, color .2s ease-out
        user-select none
        -webkit-user-select none
        -webkit-user-drag none
        outline none
        cursor pointer

        &:hover,
        &:focus
            color alpha(#fff, .85)
            box-shadow 0 6px 18px alpha(#000, .25)

@media screen and (min-width 568px) and (min-height 568px)
    #tab-body,
    #tab-footer
        width 410px

    #tab-body
        flex 0 0 auto
        padding-top 2vh

        & > .page
            flex inherit
            height auto

            & > .figure
                & > .image
                    width 214px
                    height 214px

            & > .content
                margin-top 3.75vh

@media screen all and (max-width 567.9px), (max-height 567.9px) and (orientation landscape)
    #tab
        height 100vh
        justify-content flex-start

    #tab-body,
    #tab-footer
        width 100%

    #tab-body
        flex 1
        max-width 700px
        padding-top 24px

        & > .page
            flex-direction row
 
            & > .figure
                flex 1
                max-width unset
                width 40%
                max-width 40%
                margin-top 0
                margin-left 0
                margin-bottom 0

    #tab-footer
        & > .button
            width 260px