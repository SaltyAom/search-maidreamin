#filter
    display block
    width 100%
    margin 10px 0 30px 0
    transition height .15s ease-out, margin .15s ease-out

    &.hidden
        margin 0
        height 0

    & > .sort,
    & > .order
        display block
        width 100%
        margin 0 0 8px 0

        & > .title
            display block
            width 100%
            margin 8px 0
            padding 4px 8px
            color var(--secondary-text)
            font-size 16px
            font-weight bold

        & > .option
            color var(--secondary-text)
            margin-right 4px
            padding 0 16px
            transition box-shadow .2s, background-color .2s

            &::before,
            &::after
                background-color var(--secondary-text)

            &.active
                background-color var(--root)
                color var(--secondary-text)
                box-shadow 0 2px 5px rgba(0,0,0,0.05), 
                            0 6px 15px rgba(0,0,0,0.025)

                &:hover,
                &:focus
                    background-color var(--root)