:root
	--primary: #006bff
	--primary-text: #222222
	--secondary-text: #727272
	--background: #f9f9f9
	--root: #ffffff
	--border: #ceced2
	--preload: #efeff4

html
	scroll-behavior smooth

body
	margin 0
	background-color var(--background)
	overflow-x hidden

* 
	font-family Helvetica, Roboto, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif 
	font-weight 400
	box-sizing border-box

::selection, ::-webkit-selection
	background-color rgba(0,123,255,.25)

@media screen and (prefers-color-scheme: dark)
	:root
		--root: #333333
		--border: #515151
		--background: #212121
		--preload: #ceced2
		--primary-text: #f1f1f1

	@supports (-webkit-overflow-scrolling touch)
		:root
			--background: #000000
			--card: #1c1c1e